modules = ["nodejs-20", "web"]

[nix]
channel = "stable-25_05"
packages = ["imagemagick"]

[agent]
expertMode = true
integrations = ["replitmail:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 36613
externalPort = 3003

[[ports]]
localPort = 36665
externalPort = 3002

[[ports]]
localPort = 37465
externalPort = 3000

[[ports]]
localPort = 41853
externalPort = 3001

[[ports]]
localPort = 46455
externalPort = 4200

[deployment]
deploymentTarget = "autoscale"
run = ["npm", "run", "preview"]
build = ["npm", "run", "build"]
